/* remember to use - transform-style: preserve-3d; */
html,body {
  height:100%;
  overflow: hidden;
}
body {
  background: radial-gradient(#E4CEA6, #9C8763);
  perspective: 1000px;
  margin: 0;
}

#one{
  left: 50%;
  top: 50px;
  position: absolute;
}

#two{
  left: 20%;
  top: 10px;
  position: absolute;
}

.flip {
  height: 350px;
  width: 253px;
  position: absolute;
  transform-style: preserve-3d;
  transform-origin: 0 0 0;
}

.flip .front {
  animation: wrapperfront 2s ease;
  transform: rotateX(0deg) translateY(0px) translateZ(0px);
}

.flip .back {
  animation: wrapperback 2s ease;
  transform: rotateX(180deg) scaleY(-1) translateY(0px) translateZ(0px);
}

@keyframes wrapperfront {
  80% {
    transform: rotateX(180deg) translateY(-100px) translateZ(-100px);
  }
  100% {
    transform:rotateX(180deg) translateY(-350px) translateZ(0px);
  }
}

@keyframes wrapperback {
  80% {
    transform: rotateX(360deg) scaleY(-1) translateY(-100px) translateZ(100px);
  }
  100% {
    transform: rotateX(360deg) scaleY(-1) translateY(-350px) translateZ(0px);
  }
}

.flip div{
  height: 35px;
  width: 253px;
  position: absolute;
  backface-visibility: hidden;
  top: calc(100% - 3px);
  transform-origin: 100% 0;
  transform-style: preserve-3d;
  background-size: 253px 350px;
}

.flip .front,
.flip .front div {
  background-image: url(<%= asset_path("karelback_blue") %>);
  background-repeat: no-repeat;
}

.flip .back,
.flip .back div {
  background-image: url(<%= asset_path("test.png") %>);
  background-repeat: no-repeat;
}

.flip div {
  background-position: 0px 1px;
}

.flip > div {
  border-top-left-radius:10px;
  border-top-right-radius:10px;
}

.flip div > div {
  background-position: 0px -31.8px;
}

.flip div > div > div {
  background-position : 0px -63.6px;
}

.flip div > div > div > div {
  background-position : 0px -95.5px;
}

.flip div > div > div > div > div {
  background-position : 0px -127.3px;
}

.flip div > div > div > div > div > div {
  background-position : 0px -159.1px;
}

.flip div > div > div > div > div > div > div {
  background-position : 0px -190.9px;
}

.flip div > div > div > div > div > div > div > div  {
  background-position : 0px -222.7px;
}

.flip div > div > div > div > div > div > div > div > div {
  background-position : 0px -254.5px;
}

.flip div > div > div > div > div > div > div > div > div > div {
  background-position : 0px -286.4px;
}

.flip div > div > div > div > div > div > div > div > div > div > div {
  background-position : 0px -318.2px;
  border-bottom-left-radius:10px;
  border-bottom-right-radius:10px;
}
/* the more pieces you have, the smoother the bend is */

.flip .front div {
  animation: pagefront 2s ease-in-out;
}

.flip .back div {
  animation: pageback 2s ease-in-out;
}

@keyframes pagefront {
  10% { transform: rotateX(6deg); }
  75% { transform: rotateX(-2deg); }
}

@keyframes pageback {
  10% { transform: rotateX(-6deg); }
  75% { transform: rotateX(2deg); }
}
